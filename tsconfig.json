{
  "compilerOptions": {
    "target": "es5",                                 
    "module": "ESNext",                                  
    "esModuleInterop": true,                   
    "experimentalDecorators": true,         
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
    "outDir": "./dist",     
    "moduleResolution": "Node",    
    "noImplicitAny": false,
    "resolveJsonModule": true        
                    
  },

  "include": ["**/*.*"],
  "exclude": ["**/*.spec.ts"]
}
